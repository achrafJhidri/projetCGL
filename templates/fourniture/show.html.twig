{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block content %}

    <div class="card" >
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-sm-around align-items-center ">
                    <h5  class="card-title flex-fill text-center">Nom </h5>
                    <div class="flex-fill text-center">{{ fourniture.name }}</div>
                </li>
                <li class="list-group-item d-flex justify-content-sm-around align-items-center">
                    <h5 class="card-title">Gamme</h5>
                    <div >{{ fourniture.gamme.name }}</div>
                </li>
                <li class="list-group-item d-flex justify-content-sm-around align-items-center">
                    <h5 class="card-title flex-fill text-center">Prix</h5>
                    <div class="flex-fill text-center" >{{ fourniture.buyPrice }}</div>
                </li>
                <li class="list-group-item d-flex align-items-center justify-content-sm-around">
                    <h5 class="card-title">Modifiable</h5>
                    <span >{% if fourniture.priceUpdatable %} Oui {% else %}Non {% endif %}   </span>
                </li>
            </ul>
            {% if is_granted('ROLE_ADMIN') %}
                <div class="d-flex justify-content-center">
                    <a type="button" class="btn btn-info mr-2" href="{{ path('fourniture_edit',{'id':fourniture.id}) }}">
                        Editer
                    </a>
                    <a type="button" class="btn btn-danger" href="{{ path('fourniture_remove',{'id':fourniture.id}) }}">
                        Supprimer
                    </a>
                </div>
            {% endif %}
        </div>
    </div>


{% endblock %}