{% macro commonForm(form,prefix_title) %}
    <div class="card-header mb-3">
        <h4> {{ prefix_title }}  une fourniture</h4>
    </div>
    {{ form_start(form) }}
    <div >
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        <div class="alert-danger">
            {{ form_errors(form.name) }}
        </div>
    </div>
    <div >
        {{ form_label(form.buyPrice) }}
        {{ form_widget(form.buyPrice) }}
      <div class="alert-danger">
        {{ form_errors(form.buyPrice) }}
      </div>
    </div>
    <div >
        {{ form_label(form.gamme) }}
        {{ form_widget(form.gamme) }}
    </div>
    <div >
        {{ form_label(form.isPriceUpdatable) }}
        {{ form_widget(form.isPriceUpdatable) }}
    </div>
    <div class="container d-flex justify-content-center">
        {{ form_widget(form.enregistrer) }}
    </div>
    {{ form_end(form) }}


{% endmacro %}