{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}| Gamme
{% endblock %}

{% block content %}

    <h1>
        id :    {{ gamme.id }}
    </h1>
    <h1>
        name :    {{ gamme.name }}
    </h1>

    <p> Produits de la gamme {{ gamme.name }}</p>
    <table>
        <tr>
            <th>name</th>
            <th>prix de vente</th>
        </tr>
        {% for produit in gamme.products %}
            <tr>
                <td>
                    <a href="{{ path("show_produit",{'id': produit.id }) }}">
                        {{ produit.name }}
                    </a>
                </td>
                <td>{{ produit.sellPrice }}</td>
            </tr>
        {% endfor %}
    </table>



{% endblock %}